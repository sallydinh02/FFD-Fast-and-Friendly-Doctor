<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/patientVideoCallContainer"
    android:background="#f2f0f2"
    tools:context=".fragmentAppointment.PatientVideoCallFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/healthcareimg5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconVideoCall"
            android:layout_width="109dp"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:clickable="true"
            android:src="@drawable/callicon3"
            android:elevation="20dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/videoCallToMainPage"
            android:layout_width="249dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginTop="105dp"
            android:paddingStart="18dp"
            app:cardBackgroundColor="#bc807c"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="GO TO MAIN PAGE"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</RelativeLayout>